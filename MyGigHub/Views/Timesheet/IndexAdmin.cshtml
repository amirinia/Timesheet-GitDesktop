@model IEnumerable<MyGigHub.Models.Timesheet>

@{
    ViewBag.Title = "ListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>لیست کلی</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model=>model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetDifferenceTimes().TotalMinutes)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GetDifferenceTimes().TotalMinutes)

        </td>
        <td>
            @Html.ActionLink("ویرایش", "EditAdmin", new { id = item.Id }) |
            @Html.ActionLink("جزییات", "Details", new { id = item.Id }) |
            @Html.ActionLink("حذف", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
