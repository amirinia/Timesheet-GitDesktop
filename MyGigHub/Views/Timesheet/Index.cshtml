@model IEnumerable<MyGigHub.Models.Timesheet>

@{
    ViewBag.Title = "ListView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListView</h2>

<p>
    @Html.ActionLink("ثبت ساعت جدید", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetDifferenceTimes().TotalMinutes)
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GetDifferenceTimes().TotalMinutes)

        </td>
        @if (item.StartDay.Date == DateTime.Now.Date)
        {
            <td>
                @Html.ActionLink("ثبت خروج", "Edit", new { id = item.Id }, new { disabled = "@Disabled" }) 
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("جزییات", "Details", new { id = item.Id }, new { disabled = "disabled" })
            </td>
        }
    </tr>
    }

</table>

